<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/buttondownloadmiltiblefilesmultiblethreads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttondownloadmultible"
        android:layout_alignRight="@+id/buttondownloadmultible"
        android:layout_centerVertical="true"
        android:text="Download Multibe files in multible threads" />

    <Button
        android:id="@+id/buttondownloadmultible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttondownloadmiltiblefilesmultiblethreads"
        android:layout_alignLeft="@+id/buttondownloadone"
        android:layout_marginBottom="24dp"
        android:text="Download multible files" />

    <Button
        android:id="@+id/buttondownloaduncompressed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttondownloadmiltiblefilesmultiblethreads"
        android:layout_below="@+id/buttondownloadmiltiblefilesmultiblethreads"
        android:layout_marginTop="23dp"
        android:text="Download uncompressed" />

    <Button
        android:id="@+id/buttondownloadone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="14dp"
        android:text="Download 1 file" />

    <Button
        android:id="@+id/buttondownloadoneunpackone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttondownloadone"
        android:layout_below="@+id/buttondownloadone"
        android:text="Download one, Unpack one " />

</RelativeLayout>